function unpackobb {
  options=("è§£åŒ…PUBG" "è§£åŒ…å’Œå¹³ç²¾è‹±" "é€€å‡º");
  select opt in "${options[@]}"; do
    case $opt in
      "è§£åŒ…PUBG")
        unpack32;
        ;;
      "è§£åŒ…å’Œå¹³ç²¾è‹±")
        unpack64;
        ;;
      "é€€å‡º")
        break;
        ;;
      *)
        echo "Invalid option $REPLY";
        ;;
    esac;
  done;
};

