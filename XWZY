source script_folder/banner;
echo -e "${LIGHTRED}å’Œå¹³è§£åŒ…æ‰“åŒ…å·¥å…·: ${LIGHTGREEN}å‘å¾€è‡ªç”±å·¥å…·${NOCOLOR}";
echo -e "${LIGHTCYAN}------------------ ${NOCOLOR}";
chmod +x script_folder/unpack.bms;
